<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--    <com.google.android.material.card.MaterialCardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        style="@style/CustomCardViewStyle"-->
    <!--        android:background="@color/creamewhite"-->
    <!--        android:layout_marginTop="@dimen/_5sdp"-->
    <!--        app:cardElevation="@dimen/_2sdp"-->
    <!--        android:layout_marginBottom="@dimen/_5sdp">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/creamewhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/smokewhite"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/10/2023"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_10sdp"
                    app:fontFamily="@font/opensans_semibold" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:30 AM"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_10sdp"
                    app:fontFamily="@font/opensans_semibold" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_view"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/verified_user_color"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/view"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:visibility="visible"
                app:cornerRadius="@dimen/_50sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="Tournament Name"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_8sdp"
            app:fontFamily="@font/opensans_semibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/placeholder_user"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tvTeamName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Chennai Super King"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/opensans_semibold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/placeholder_user"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tvTeamName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Royal Challengers Bangalore"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/opensans_semibold" />

        </LinearLayout>

    </LinearLayout>
    <!-- </com.google.android.material.card.MaterialCardView>-->


</RelativeLayout>